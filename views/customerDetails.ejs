<%- include('./partials/top') %>
<section id="customerDetails">
  <div class="container">
    <h2 class="text-center mt-5">Customer Details</h2>
    <button data-toggle="modal" data-target="#updateModal" class="btn btn-primary mt-2 mb-3">Edit Details</button>
    <table class="table mb-5 text-center">
      <thead>
          <tr>
              <th>Unique Code</th>
              <th>Full Name</th>
              <th>Gender</th>
              <th>Email</th>
              <th>Address</th>
              <th>Phone Number</th>
          </tr>
      </thead>
      <tbody>
          <tr class="table-success">
              <td><%= customer.unique_code %></td>
              <td><%= customer.full_name %></td>
              <td><%= customer.gender %></td>
              <td><%= customer.email %></td>
              <td><%= customer.address %></td>
              <td><%= customer.phone_number %></td>
          </tr>
      </tbody>
    </table>
    <table class="table text-center table2 table-bordered">
      <h2 class="text-center mb-4">Order Details</h2>
      <thead>
        <tr class="bg-dark text-light">
          <th>#</th>
          <th>Order ID</th>
          <th>Action</th>
        </tr>
      </thead>
        <tbody>
        <tr>
          <td>1</td>
          <td>1</td>
          <td>
            <a href="#" class="btn btn-primary">Details</a>
          </td>
        </tr>
      </tbody>
  </table>
  </div>
  <div class="modal" id="updateModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Update Details</h5>
          <button class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <form action="/customerdetails" method="POST">
            <div class="form-group">
              <label for="username">Full Name</label>
              <input type="text" placeholder="Full Name" name="full_name" class="form-control" value="<%= customer.full_name %>">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" placeholder="Email" name="email" class="form-control" value="<%= customer.email %>">
            </div>
            <div class="form-group">
              <label for="address">Address</label>
              <input type="text" placeholder="Address" name="address" class="form-control" value="<%= customer.address %>">
            </div>
            <div class="form-group">
              <label for="phone_number">Phone Number</label>
              <input type="text" placeholder="Phone Number" name="phone_number" class="form-control" value="<%= customer.phone_number %>">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" placeholder="Password" name="password" class="form-control" value="<%= customer.password %>" >
            </div>
            <div class="modal-footer">
              <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
<%- include('./partials/bottom.ejs') %>